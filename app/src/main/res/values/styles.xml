<resources>


    <!-- EditText -->
    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:color">@color/gray</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>


    <style name="SocialmaLabel">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:paddingLeft">@dimen/spacing.sm</item>
        <item name="android:paddingTop">@dimen/spacing.xs</item>
        <item name="android:paddingRight">@dimen/spacing.xs</item>
        <item name="android:paddingBottom">@dimen/spacing.xs</item>
    </style>

    <style name="SocialmaTextInputEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">@dimen/text.lg</item>
        <item name="android:paddingTop">@dimen/spacing.xxs</item>
    </style>

    <style name="SocialmaTextInputLayout">
        <item name="android:padding">@dimen/spacing.sm</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>
    <!-- /EditText -->

    <!-- Button -->
    <style name="Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Purple">
        <item name="android:background">@drawable/bg_button_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Twitter">
        <item name="android:background">@drawable/bg_button_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- /Button -->

    <!-- TextView -->
    <style name="TextLight">
        <item name="fontPath">@string/font_light</item>
    </style>

    <style name="TextBold">
        <item name="fontPath">@string/font_extra_bold</item>
    </style>

    <style name="TextBold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBold.Purple">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="TextBold.DarkPurple">
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="TextBold.Small">
        <item name="android:textSize">@dimen/text.sm</item>
    </style>

    <style name="TextBold.Large">
        <item name="android:textSize">@dimen/text.lg</item>
    </style>

    <style name="TextBold.White.Small">
        <item name="android:textSize">@dimen/text.sm</item>
    </style>

    <style name="TextBold.White.Large">
        <item name="android:textSize">@dimen/text.lg</item>
    </style>

    <style name="TextBold.Black.Small">
        <item name="android:textSize">@dimen/text.sm</item>
    </style>

    <style name="TextBold.Black.Large">
        <item name="android:textSize">@dimen/text.lg</item>
    </style>

    <style name="text_purple">
        <item name="android:textColor">@color/purple</item>
    </style>


    <style name="text_center">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_view_link">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="text_purple_center" parent="text_purple">
        <item name="android:textAlignment">center</item>
    </style>


    <style name="text_purple_center_link" parent="text_purple">
        <item name="android:textAlignment">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- /TextView -->

    <!-- Toolbar -->
    <style name="toolbar.title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">@string/font_extra_bold</item>
    </style>

    <!-- /Toolbar -->


    <style name="SubtitleProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text.lg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontPath">@string/font_extra_light</item>
        <item name="android:layout_marginTop">@dimen/spacing.sm</item>
        <item name="android:layout_marginBottom">@dimen/spacing.xs</item>
    </style>

    <dimen name="edit_text_height">40dp</dimen>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
